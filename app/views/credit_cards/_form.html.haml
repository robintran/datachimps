= form_for @credit_card do |f|
  - if @credit_card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@credit_card.errors.count, "error")} prohibited this credit_card from being saved:"
      %ul
        - @credit_card.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :card_number
    = f.text_field :card_number
  .field
    = f.label :security_code
    = f.text_field :security_code
  .field
    = f.label :expiration_month
    = f.number_field :expiration_month
  .field
    = f.label :expiration_year
    = f.number_field :expiration_year
  .actions
    = f.submit 'Save'
