%p#notice= notice

%p
  %b User:
  = @contest.user.name
%p
  %b Name:
  = @contest.name
%p
  %b Description:
  = @contest.description
%p
  %b Deadline:
  = @contest.deadline
%p
  %b Winner:
  = @contest.winner.email if @contest.winner
%p
  %b Bounty:
  = @contest.bounty

- if current_user == @contest.user
  = link_to 'Edit', edit_contest_path(@contest)
  \|
= link_to 'Back', contests_path

%h2 Entries
%p= link_to "Add entry", new_contest_entry_path(@contest)
= render partial: "entries/entry", collection: @contest.entries
